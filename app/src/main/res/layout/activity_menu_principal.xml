<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout da tela de menu principal do app.
    Oferece navegação para cadastro, visualização no mapa e listagem dos pontos turísticos.
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Container com fundo colorido e padding -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/amarelo_limao"
        android:padding="24dp">

        <!-- Título de boas-vindas -->
        <TextView
            android:id="@+id/textoBoasVindas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Menu Principal"
            android:textColor="@color/azul_escuro"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/botaoCadastrar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Botão para abrir tela de cadastro de ponto turístico -->
        <Button
            android:id="@+id/botaoCadastrar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/rosa"
            android:text="Cadastrar Ponto Turístico"
            android:textColor="@color/branco"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textoBoasVindas" />

        <!-- Botão para ver pontos no mapa -->
        <Button
            android:id="@+id/botaoMapa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/rosa"
            android:text="Ver no Mapa"
            android:textColor="@color/branco"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/botaoCadastrar" />

        <!-- Botão para ver a lista de pontos -->
        <Button
            android:id="@+id/botaoLista"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/rosa"
            android:text="Ver Lista de Pontos"
            android:textColor="@color/branco"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/botaoMapa" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>