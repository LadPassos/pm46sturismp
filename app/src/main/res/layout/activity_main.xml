<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout da tela inicial (MainActivity) do app.
    Exibe a logo do aplicativo e um botão de entrada estilizado.
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarelo_limao">

    <!-- Logo centralizada na parte superior -->
    <ImageView
        android:id="@+id/imagemLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/logo_desc"
        android:src="@drawable/logo_pm46s"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botão grande de entrada centralizado na parte inferior -->
    <Button
        android:id="@+id/botaoEntrar"
        android:layout_width="243dp"
        android:layout_height="83dp"
        android:backgroundTint="@color/rosa"
        android:text="@string/botao_entrar"
        android:textColor="@color/branco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.922" />
</androidx.constraintlayout.widget.ConstraintLayout>