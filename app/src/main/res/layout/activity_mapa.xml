<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout da tela do mapa.
    Exibe o Google Maps em tela cheia e um FloatingActionButton para acessar as configurações.
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fragmento do Google Maps ocupando toda a tela -->
    <fragment
        android:id="@+id/mapa"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Botão flutuante para abrir as configurações do mapa -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnConfigMapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@drawable/config"
        android:backgroundTint="@color/rosa"
        android:contentDescription="Configurações do mapa" />
</FrameLayout>